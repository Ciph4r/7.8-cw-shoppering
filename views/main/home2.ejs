<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../partial/head %> 
    <title>Online Shopper</title>
    <style>
      html {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      .col-md-4 {
        margin-bottom: 50px;
      }
      .my-jumbotron {
        position: relative;
        background: linear-gradient(
            47deg,
            rgba(0, 0, 0, 0.8),
            rgba(0, 176, 0, 0.2)
          ),
          url('/images/square.jpg') center center;
        background-color: #172d1c;
        width: 100%;
        background-size: cover;
        color: #fff;
        height: 18em;
      }
      .card-img-top {
        height: 300px;
      }
      .my-h1 {
        padding-top: 30px;
      }
      .opening-card {
        border-radius: 0;
      }
    </style>
  </head>
  <body>
<% include ../partial/navbar %> 

    <div id="container" class="fluid">
      <main role="main">
       <% include ../partial/jumbotron %> 
        <div class="container">

            <% for( let i = 0; i < data.length ; i+=3 ) { %>
                    <div class="row">
                        <% for( let j = i; j < i + 3; j++ ) { %>
                            <div class="col-md-4" style="width:20rem;">
                                <div class="card">
                                  <img
                                    src="/images/products/<%= data[j].img %>"
                                    class="card-img-top"
                                    alt="..."
                                  />
                                  <div class="card-body">
                                    <h5 class="card-title"><%= data[j].name %> </h5>
                                    <p class="card-text">
                                      <%= data[j].description %> 
                                    </p>
                                  </div>
                                </div>
                              </div>
                        <% } %> 
                    </div>
              <% } %>
        </div>
      </main>
    </div>
<% include ../partial/footer %> 
<% include ../partial/scripts %> 

  </body>
</html>